{
  "client_version": "{{VERSION}}",
  "prebuild_plugins": [
    {
      "name": "reactor_config",
      "args": {
        "config_path": "{{CONFIG_PATH}}"
      }
    },
    {
      "args": {
        "label_key": "is_autorebuild",
        "label_value": "true",
        "url": "{{OPENSHIFT_URI}}",
        "verify_ssl": false
      },
      "name": "check_and_set_rebuild"
    },
    {
      "args": {
        "config_file": ".osbs-repo-config"
      },
      "name": "stop_autorebuild_if_disabled"
    },
    {
      "name": "resolve_module_compose",
      "args": {
        "module_name": "{{MODULE_NAME}}",
        "module_stream": "{{MODULE_STREAM}}",
        "odcs_url": "{{ODCS_URL}}",
        "odcs_insecure": "{{ODCS_INSECURE}}",
        "pdc_url": "{{PDC_URL}}",
        "pdc_insecure": "{{PDC_INSECURE}}"
      }
    },
    {
      "name": "flatpak_create_dockerfile",
      "args": {
        "base_image": "{{BASE_IMAGE}}"
      }
    },
    {
      "name": "add_filesystem",
      "args": {
        "koji_hub": "{{KOJI_HUB}}",
        "repos": []
      }
    },
    {
      "name": "pull_base_image",
      "args": {
        "parent_registry": "{{REGISTRY_URI}}",
        "parent_registry_insecure": true,
        "skopeo_copy": true,
      }
    },
    {
      "args": {
        "hub": "{{KOJI_HUB}}"
      },
      "name": "bump_release"
    },
    {
      "args": {
        "labels": "{{IMPLICIT_LABELS}}"
      },
      "name": "add_labels_in_dockerfile"
    },
    {
      "name": "koji_parent",
      "required": false,
      "args": {
        "koji_hub": "{{KOJI_HUB}}"
      }
    },
    {
      "name": "change_from_in_dockerfile"
    },
    {
      "name": "add_help",
      "required": false
    },
    {
      "name": "add_dockerfile"
    },
    {
      "args": {
        "command": "{{SOURCES_COMMAND}}"
      },
      "name": "distgit_fetch_artefacts"
    },
    {
      "args": {
        "koji_root": "{{KOJI_ROOT}}",
        "koji_hub": "{{KOJI_HUB}}"
      },
      "required": false,
      "name": "fetch_maven_artifacts"
    },
    {
      "args": {
        "root": "{{KOJI_ROOT}}",
        "target": "{{KOJI_TARGET}}",
        "hub": "{{KOJI_HUB}}"
      },
      "name": "koji"
    },
    {
      "args": {
        "repourls": []
      },
      "name": "add_yum_repo_by_url"
    },
    {
      "name": "inject_yum_repo"
    },
    {
      "name": "dockerfile_content",
      "required": false
    },
    {
      "name": "distribution_scope"
    }
  ],
  "prepublish_plugins": [
    {
      "name": "squash"
    },
    {
      "name": "flatpak_create_oci"
    }
  ],
  "buildstep_plugins": [
    {"name": "buildah"}
  ],
  "postbuild_plugins": [
    {
      "args": {
        "image_id": "BUILT_IMAGE_ID"
      },
      "name": "all_rpm_packages"
    },
    {
      "name": "tag_by_labels"
    },
    {
      "name": "tag_from_config"
    },
    {
      "name": "tag_and_push",
      "args": {
        "registries": {
          "{{REGISTRY_URI}}": { "insecure": true }
        }
      }
    },
    {
      "name": "pulp_push",
      "args": {
        "pulp_registry_name": "{{PULP_REGISTRY_NAME}}",
        "load_exported_image": true,
        "dockpulp_loglevel": "INFO"
      }
    },
    {
      "name": "pulp_sync",
      "args": {
        "pulp_registry_name": "{{PULP_REGISTRY_NAME}}",
        "docker_registry": "{{DOCKER_REGISTRY}}",
        "dockpulp_loglevel": "INFO"
      }
    },
    {
      "name": "compress",
      "args": {
        "load_exported_image": true,
        "method": "gzip"
      }
    },
    {
      "name": "pulp_pull",
      "args": {
        "insecure": true
      }
    },
    {
      "args": {
        "imagestream": "{{IMAGESTREAM}}",
        "docker_image_repo": "{{DOCKER_IMAGE_REPO}}",
        "url": "{{OPENSHIFT_URI}}",
        "verify_ssl": false,
        "build_json_dir": "{{PATH}}"
      },
      "name": "import_image"
    }
  ],
  "exit_plugins": [
    {
      "name": "delete_from_registry",
      "args": {
        "registries": {}
      }
    },
    {
      "name": "koji_promote",
      "args": {
        "kojihub": "{{KOJI_HUB}}",
        "url": "{{OPENSHIFT_URI}}",
        "verify_ssl": false,
        "blocksize": 10485760,
        "koji_keytab": false,
        "koji_principal": false
      }
    },
    {
      "args": {
        "url": "{{OPENSHIFT_URI}}",
        "verify_ssl": false
      },
      "name": "store_metadata_in_osv3"
    },
    {
      "name": "koji_tag_build",
      "args": {
        "kojihub": "{{KOJI_HUB}}",
        "koji_keytab": false,
        "koji_principal": false
      }
    },
    {
      "name": "remove_built_image"
    },
    {
      "args": {
        "send_on": ["auto_canceled", "auto_fail", "manual_success", "manual_fail"],
        "smtp_host": "{{SMTP_HOST}}",
        "from_address": "{{SMTP_FROM}}"
      },
      "name": "sendmail"
    }
  ]
}
